SQL> REM JOB_ID : IT_PROG ST_CLERK +2000 , SA_REP AD_VP AC_ACCOUNT +1500 , MK_REP MK_MAN AD_ASST +1000 , REMAINING +50
SQL> 
SQL> SELECT FIRST_NAME , JOB_ID , SALARY ,
  2  CASE WHEN JOB_ID IN ('IT_PROG','ST_CLERK') THEN SALARY + 2000
  3       WHEN JOB_ID = ANY ('SA_REP','AD_VP','AC_ACCOUNT') THEN SALARY + 1500
  4       WHEN JOB_ID = 'MK_REP' OR JOB_ID = 'MK_MAN' OR JOB_ID = 'AD_ASST') THEN SALARY + 1000 ELSE SALARY + 500 END NEW_SALARY
  5  FROM EMPLOYEES
  6  ORDER BY 2;
